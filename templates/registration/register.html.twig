{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-sm">
			<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Get Started</h2>
		</div>

		<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
			<form class="space-y-6" action="#" method="POST">
				{{ form_start(registrationForm) }}
				{{ form_label(registrationForm.email) }}
				{{ form_widget(registrationForm.email) }}
				<div class="text-indigo-600 text-sm" style="margin-top: 5px">
					{{ form_errors(registrationForm.email) }}
				</div>
				{{ form_label(registrationForm.user_name) }}
				{{ form_widget(registrationForm.user_name) }}
				<div class="text-indigo-600 text-sm" style="margin-top: 5px ">
					{{ form_errors(registrationForm.user_name) }}
				</div>
				{{ form_label(registrationForm.plainPassword) }}
				{{ form_widget(registrationForm.plainPassword) }}
				<div class="text-indigo-600 text-sm" style="margin-top: 5px">
					{{ form_errors(registrationForm.plainPassword) }}
				</div>
				<div class="text-sm">
					<a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Forgot password?</a>
				</div>
				<div class="relative flex gap-x-3">
					<div class="flex h-6 items-center" style="margin-right: 0.75rem;">
						{{ form_widget(registrationForm.RGPDConsent) }}
					</div>
					<div class="text-sm leading-6">
						{{ form_label(registrationForm.RGPDConsent) }}
					</div>
					<div class="mt-2 text-indigo-600text-sm">
						{{ form_errors(registrationForm.RGPDConsent) }}
					</div>
				</div>
				<div>
					<button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign in</button>
				</div>
				{{ form_end(registrationForm) }}
			</form>

			<p class="mt-10 text-center text-sm text-gray-500">Not a member?
				<a href="register" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Register now</a>
			</p>
		</div>
	</div>
{% endblock %}
