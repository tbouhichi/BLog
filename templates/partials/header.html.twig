<header class="bg-gray-100">
	<nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
		<div class="flex lg:flex-1">
			<a href="#" class="-m-1.5 p-1.5">
				<span class="sr-only">Insight blog</span>
				<img class="h-8 w-auto" src="{{ asset('images/logos/logo.png') }}" alt="Logo">
			</a>
		</div>

		<div class="hidden lg:flex lg:flex-1 lg:justify-end">
			{%if app.user %}
				<p class="text-sm font-semibold leading-6 text-gray-900 mr-2">Hi
					{{app.user}}
					!
				</p>
				<a href="{{ path('app_logout') }}" class="text-sm font-semibold leading-6 text-gray-900">Log out
					<span aria-hidden="true">&rarr;</span>
				</a>
			{% else %}
				{% set current_route = app.request.attributes.get('_route') %}
				{% if current_route == 'app_login' or current_route == 'app_register' %}
					<a href="{{ path('app_home') }}" class="text-sm font-semibold leading-6 text-gray-900">Home
						<span aria-hidden="true">&rarr;</span>
					</a>
				{% else %}
					<a href="{{ path('app_login') }}" class="text-sm font-semibold leading-6 text-gray-900">Log in
						<span aria-hidden="true">&rarr;</span>
					</a>
				{% endif %}
			{% endif %}
		</div>
	</nav>
</header>
